-- ⚡ Brutal Teleport Multi-Point (Loop + Auto Reset + 0.2s Delay) by Ganesha Exploit ⚡
-- ✅ Teleport CFrame dengan delay 0.2 detik per checkpoint
-- ✅ Auto reset 2 detik setelah checkpoint terakhir
-- ✅ Loop otomatis saat respawn
-- ✅ Toggle ON/OFF dengan UI modern
-- ✅ UI tetap ada setelah respawn

-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Teleport points
local teleportPoints = {
    Vector3.new(-739.16, 93.00, -31.67),
    Vector3.new(-41.64, 93.10, -76.02),
    Vector3.new(555.06, 96.59, -162.58),
    Vector3.new(630.34, 235.19, -116.74),
    Vector3.new(667.44, 373.17, -542.18),
    Vector3.new(293.70, 287.47, -888.90),
    Vector3.new(321.22, 514.42, -830.89),
}

-- State
local isTeleporting = false
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local humanoid = character:WaitForChild("Humanoid")

-- Fungsi teleport loop dengan delay 0.2 detik
local function teleportLoop()
    task.spawn(function()
        while isTeleporting and humanoid and humanoid.Health > 0 do
            for i, point in ipairs(teleportPoints) do
                if not isTeleporting or humanoid.Health <= 0 then break end
                hrp.CFrame = CFrame.new(point) -- teleport instan ke checkpoint
                task.wait(0.2) -- delay 0.2 detik per checkpoint
            end

            if not isTeleporting then break end

            -- Auto reset setelah 2 detik
            task.wait(2)
            if humanoid and humanoid.Health > 0 then
                humanoid.Health = 0
            end

            -- Tunggu respawn
            task.wait(1)
            character = player.Character
            if character then
                hrp = character:WaitForChild("HumanoidRootPart")
                humanoid = character:WaitForChild("Humanoid")
            end
        end
    end)
end

-- Start/Stop
local function startTeleport()
    if isTeleporting then return end
    isTeleporting = true
    teleportLoop()
end

local function stopTeleport()
    isTeleporting = false
end

-- UI Modern
if not gui:FindFirstChild("TeleportUI") then
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "TeleportUI"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = gui

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 200, 0, 80)
    frame.Position = UDim2.new(0.5, -100, 0.1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local toggleButton = Instance.new("TextButton")
    toggleButton.Size = UDim2.new(1, -20, 0, 40)
    toggleButton.Position = UDim2.new(0, 10, 0, 20)
    toggleButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggleButton.Text = "Start Teleport"
    toggleButton.Parent = frame

    toggleButton.MouseButton1Click:Connect(function()
        if isTeleporting then
            stopTeleport()
            toggleButton.Text = "Start Teleport"
        else
            startTeleport()
            toggleButton.Text = "Stop Teleport"
        end
    end)
end

-- Auto reconnect saat respawn
player.CharacterAdded:Connect(function(char)
    character = char
    hrp = character:WaitForChild("HumanoidRootPart")
    humanoid = character:WaitForChild("Humanoid")

    if isTeleporting then
        teleportLoop()
    end
end)
